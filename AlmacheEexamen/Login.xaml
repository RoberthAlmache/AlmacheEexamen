<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlmacheEexamen.Login">
   
        <StackLayout>
        <Frame BackgroundColor="Chocolate" Padding="15" CornerRadius="0">
            <Label Text="Examen Parcial" HorizontalTextAlignment="Center" TextColor="White" FontSize="Body"></Label>
        </Frame>

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="txtContraseña" Placeholder="Ingrese la contraseña" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>

        <Label Text="© Derechos Reservados 2021 Roberth Almache" HorizontalTextAlignment="Center" TextColor="ForestGreen"/>
    </StackLayout>
   
</ContentPage>